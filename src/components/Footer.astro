---
import FooterIcon from "../components/FooterIcon.astro";
import logo from "../assets/images/your-insta-pro-logo.png";
import novanetLogo from "../assets/images/novanet-logo.svg";
---

<footer class="flex items-center px-6 pt-[8px] py-2 lg:px-24 lg:py-4">
  <div class="flex flex-col gap-2 items-center flex-1 lg:gap-3 lg:flex-row">
    <p class="font-light text-xs lg:text-base">Your Insta Pro - 2024</p>
    <div class="flex gap-2">
      <FooterIcon name="fa-solid:mobile-alt" />
      <FooterIcon name="fa6-brands:instagram" />
      <FooterIcon name="fa-solid:envelope" />
    </div>
  </div>
  <div class="flex-1 flex justify-center">
    <a href="/">
      <img
        class="max-w-[4rem] md:max-w-[6rem] lg:max-w-[8rem]"
        src={logo.src}
        alt="Your Insta Pro"
      />
    </a>
  </div>
  <div
    class="flex-1 flex flex-col items-center gap-1 justify-end lg:gap-4 lg:flex-row"
  >
    <p class="font-light text-xs lg:text-base">Made by:</p>
    <a href="https://www.novanet.studio" target="_blank">
      <img
        class="max-w-[5rem] lg:max-w-[8rem]"
        src={novanetLogo.src}
        alt="Astro"
      />
    </a>
  </div>
</footer>
