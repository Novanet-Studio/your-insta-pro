---
import Image from "astro/components/Image.astro";
import markSvg from "../assets/images/to-see-work-mark.svg";
---

<section
  class="min-h-[435px] h-full bg-[#E8E8E8] flex items-center justify-center px-36 relative"
>
  <div class="max-w-[786px] w-full relative">
    <Image src={markSvg} alt="SVG" class="absolute" />
    <div class="px-8 mb-6 leading-tight">
      <p class="font-light text-4xl mt-10 text-[#222222]">
        Currently managing the Instagram accounts for <span class="font-bold"
          >@mgmedical_</span
        > and
        <span class="font-bold">@karwasserwigs</span>
      </p>
    </div>
    <span
      class="text-[#BA891F] font-bold text-4xl absolute z-10 -top-5 left-10 bg-transparent"
      >To see work</span
    >
  </div>
</section>
