---
import { Icon } from "astro-icon/components";
import bgImage from "../assets/images/your-insta-pro-contact-image.webp";
---

<section
  class="min-h-screen h-full px-8 w-full bg-no-repeat bg-cover bg-center relative z-10 bg-black bg-opacity-50 flex justify-between md:px-10 lg:min-h-[100vh] lg:px-24"
  style={{ backgroundImage: `url(${bgImage.src})` }}
>
  <div class="self-start max-w-[515px] w-full relative mt-24">
    <h4 class="font-bold text-2xl leading-normal md:text-3xl lg:text-4xl">
      Contact
    </h4>
    <p
      class="font-light text-lg mt-2 leading-tight max-w-[14rem] md:leading-normal md:max-w-[18rem] lg:text-2xl lg:max-w-[23rem]"
    >
      Contact us today to learn more about how we can help you succeed on
      Instagram
    </p>
    <div class="flex gap-4 items-center mt-8">
      <div
        class="bg-[radial-gradient(50%_50%_at_50%_50%,_#FEF3A4_0%,_#BA891F_100%)] w-12 h-12 flex justify-center items-center rounded-full lg:w-[4rem] lg:h-[4rem]"
      >
        <Icon
          name="fa-solid:mobile-alt"
          class="text-[rgba(34,_34,_34,_1)] text-lg lg:text-3xl"
        />
      </div>
      <p class="text-[rgba(34,_34,_34,_1)] text-lg font-bold lg:text-2xl">
        305-497-2324
      </p>
    </div>
  </div>
</section>
